<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context="org.neosoft.com.d6challenge.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Select any number of Checkbox and submit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <CheckBox
        android:id="@+id/cB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check one" />

    <CheckBox
        android:id="@+id/cB2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check two" />

    <CheckBox
        android:id="@+id/cB3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check three" />

    <CheckBox
        android:id="@+id/cB4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check four" />



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEAE0C"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="Display selected check box" />



    <TextView
        android:id="@+id/txtResult"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>


</LinearLayout>
